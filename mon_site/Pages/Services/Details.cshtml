    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12 col-12 text-center" style="margin-top:25px;background:#09383C; border-radius:15px 15px 15px 15px">
            <h3 style="color:white"><i class="fa-solid fa-circle-info" style="color:white; width:25px;height:25px;margin-top:5px"></i> Détails sur @Model.GetDesignationParent()</h3>
        </div>
    </div>
    <div class="row gy-3 my-3">
        @foreach (var serv in Model.service_list)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 bg-white rounded">
                <div class="card">
                    <div class="card-zoom">
                        @if (serv.img == null)
                        {
                            <img src="~/img/Free_iMac TekSniper Site.jpg" class="card-img-top img-fluid" alt="...">
                        }
                        @if (serv.img != null)
                        {
                            <img src="~/img/@serv.img" class="card-img-top img-fluid" alt="...">
                        }
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@serv.designation</h6>
                        <a href="#" class="btn btn-outline-danger m-auto d-block">Commandez</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>