@page
@model mon_site.Pages.Services.IndexModel
@{
    ViewData["Title"] = "Services";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12 col-12 text-center" style="margin-top:25px;background:#09383C; border-radius:15px 15px 15px 15px">
            <h3 style="color:white"><i class="fa-solid fa-gear" style="color:white; width:25px;height:25px;margin-top:5px"></i> Services</h3>
        </div>
    </div>
    <p style="margin-top:25px" class="text-center">Nous offrons des services de Design Graphique et de Developpement informatique, avec une touche professionnel</p>
    <div class="row gy-3 my-3 align-items-center justify-content-center">
        @foreach (var dict in Model.GetDictParentServices())
        {
            <div class="col-sm-6 col-md-4 col-lg-3 bg-white rounded">
                <div class="card shadow-sm">
                    <div class="card-zoom">
                        @if (dict.Value != "Infographie")
                        {
                            <img src="~/img/Services/ITDev.jpg" class="card-img-top img-fluid" alt="Photo de Pakata Goh sur Unsplash" />
                        }
                        @if(dict.Value == "Infographie")
                        {
                            <img src="~/img/Services/GraphicDesign.jpg" class="card-img-top img-fluid" alt="Photo de Emily Bernal sur Unsplash" />
                        }
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@dict.Value</h6>
                        <a href="/Services/Details?id=@dict.Key&designation=@dict.Value" class="btn btn-outline-danger m-auto d-block">Details</a>
                    </div>
                </div>
            </div>
        }

    </div>    
</div>