@page
@model mon_site.Pages.CreasModel
@{
    ViewData["Title"] = "Portfolio";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12 col-12 text-center" style="margin-top:25px;background:#09383C; border-radius:15px 15px 15px 15px">
            <h3 style="color:white"><i class="fa-solid fa-palette" style="color:white; width:25px;height:25px;margin-top:5px"></i> Mes créas</h3>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <h4 class="alert-heading font-weight-bold">Book Portfolio</h4>
                <a href="https://1drv.ms/b/s!Ar7iCRj6gZFOl2F7BjEW0aLreZm1?e=nYU0pQ" class="alert-link" target="_blank">Cliquez ici</a> pour télécharger mon portfolio en PDF
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
        </div>
    </div>

    @if (Model.ErMessage != null)
    {
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-9">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h4><strong>Erreur :</strong></h4>
                    @Model.ErMessage
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col col-sm-8 col-md-8 col-lg-6 text-center">

            <div class="dropdown">
                <button style="margin-top:25px" class="btn btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-filter"></i> Filtre
                </button>
                <div class="dropdown-menu">
                    @foreach (var _type in Model.GetlistType())
                    {
                        <a class="dropdown-item" href="/Creas?Id=@_type.Key">@_type.Value</a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-top:15px">
        
        @foreach(var crea in Model.listCreas)
        {
            <div class="item col-lg-4 col-sm-6">
                <a href="data:image;base64,@System.Convert.ToBase64String(@crea.Url_byte)" class="fancybox" data-fancybox="gallery1">
                    <div class="thumbnail">
                        <div class="img-container">
                            <img src="data:image;base64,@System.Convert.ToBase64String(@crea.Url_byte)" alt="" class="image" />
                            <div class="overlay">
                                <p class="caption">@crea.Titre</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }        
    </div>
    
